{
  "version": 2,
  "builds": [
    { "src": "api/index.js", "use": "@vercel/node" },
    { "src": "public/**", "use": "@vercel/static" }
  ],
  "routes": [
    { "src": "/api/(.*)", "dest": "api/index.js" },
    { "src": "/skill\\.md", "dest": "api/index.js" },
    { "src": "/heartbeat\\.md", "dest": "api/index.js" },
    { "src": "/skill\\.json", "dest": "api/index.js" },
    { "src": "/claim/(.*)", "dest": "api/index.js" },
    { "src": "/guide", "dest": "api/index.js" },
    { "src": "/(.*)", "dest": "public/$1" }
  ]
}
